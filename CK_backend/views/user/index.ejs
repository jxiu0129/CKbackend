<%-include('../root/header')-%>
		<!-- Main -->
			<section id="main" class="wrapper">
				<div class="inner">
					<header class="align-center">
						<h1>我參加的活動</h1>
					</header>
					<div class="table-wrapper">
						<table>
							<thead>
							<tr>
								<th>活動名稱</th>
								<th>報到時間</th>
								<th>刷退時間</th>
								<th>獲得點數</th>
							</tr>
							</thead>
							<tbody>
                            <%# =================從這邊開始dynamic================== %>
                            <% for(let i = 0; i < event_info.length; i++){%>
							<tr>
								<td><a href="" data-toggle="modal" data-target="#exampleModal"><%= event_info[i].name %></a></td>

								<!-- Modal -->
								<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
									<div class="modal-dialog" role="document">
										<div class="modal-content">
											<div class="modal-header">
												<h3 class="modal-title" id="exampleModalLabel">活動資訊</h3>
												<button type="button" class="close" data-dismiss="modal" aria-label="Close">
													<span aria-hidden="true">&times;</span>
												</button>
											</div>
                                            <div class="modal-body">
												<h3 class="inline">活動名稱：</h3><p class="inline"><%=event_info.name%></p>
												<br>
												<h3 class="inline">活動日期：</h3><p class="inline"><%=event_info.time%></p>
												<br>
												<h3 class="inline">主辦單位：</h3><p class="inline"><%=event_info.sponsor%></p>
                                                <br>
											</div>
											<div class="modal-footer">
												<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
											</div>
										</div>
									</div>
								</div>


								<td><%= event_info[i].sign_in %></td>
								<td><%= event_info[i].sign_out%></td>
								<td>
									<img src="../images/piggy-bank.png" height="20" width="20"/>
									<%=event_info[i].income%>
								</td>
                            </tr>
                            <%}%>
                            <%# =================結束dynamic區域================== %>
							</tbody>
						</table>
					</div>

					<!--button-->
					<ul class="actions fit">
						<li><a href="#" class="button fit">錢包查看餘額</a></li>
					</ul>
					</div>
			</section>
<%-include('../root/footer')-%>