<%-include('../root/header')-%>

		<!-- Main -->
			<section id="main" class="wrapper">
				<div class="inner">
					<header class="align-center">
						<h3><u><%event.name%> 的詳細資訊：</u></h3>
					</header>

						<!-- Table -->
						<div class="table-wrapper">
							<table>
								<tbody>
								<tr>
									<td width="400px" style= "word-break:break-all">活動名稱</td>
									<td width="600px" style= "word-break:break-all"><%event.name%></td>
								</tr>
								<tr>
									<td>活動開始時間</td>
									<td><%event.time%></td>
								</tr>
								<tr>
									<td>活動結束時間</td>
									<td><%event.endtime%></td>
								</tr>
								<tr>
									<td>活動地點</td>
									<td><%event.location%></td>
								</tr>
								<tr>
									<td>主辦單位投資金額</td>
									<td>
										<img src="../images/piggy-bank.png" height="20" width="20"/>
										<%event.expense%>
									</td>
								</tr>
								<tr>
									<td>參與人數</td>
									<td><%event.amount%></td>
								</tr>
								<tr>
									<td>
										<%if(<%event.status == 'holding'%>){%>
											獲得點數（尚未發放）
										<%}else{%>
											獲得點數
										<%}%>
									</td>
									<td>
										<img src="../images/piggy-bank.png" height="20" width="20"/>
										<%(event.expense) / (event.amount)%>
									</td>
								</tr>
								</tbody>
							</table>
					</div>

					<!--button-->
					<ul class="actions fit">
						<li><a href="/user/record" class="button special fit">回到上一頁</a></li>
					</ul>
					</div>
			</section>
<%-include('../root/footer')-%>