<%-include('../root/header')-%>

		<!-- Main -->
			<section id="main" class="wrapper">
				<div class="inner">
					<header class="align-center">
						<h1>活動列表</h1>
						<p>以下活動都是與我們共同創造雙贏局面的活動喔！</p>
					</header>

					<form method="post" action="#">
						<div class="row uniform">
							<div class="9u 12u$(small)">
								<input type="text" name="query" id="query" value="" style="height: 3em" placeholder="輸入活動名稱" />
							</div>
							<div class="3u$ 12u$(small)">
								<input type="submit" value="搜尋" class="fit" style="height: 3em; line-height: 3em"/>
							</div>
						</div>
					</form>

					<div class="table-wrapper">
						<table>
							<thead>
							<tr>
								<th>活動名稱/ID<br>(將滑鼠移至活動名稱即可檢視ID)</th>
								<th>活動日期</th>
								<th>活動地點</th>
								<th>投資點數</th>
								<th>承辦單位</th>
								<th>報名連結</th>
							</tr>
							</thead>
							<tbody>
							<% for(let i = 0 ; i < _event.length; i++){ %>

							<tr>
								<td title="<%=_event[i].shortid%>" width="300px" style= "word-break:break-all"><%=_event[i].name%></td>
								<td width="250px" style= "word-break:break-all"><%=Time[i]%> 開始
									<br><%= endTime[i] %> 結束</td>

								<td width="150px" style= "word-break:break-all"><%=_event[i].location%></td>
								<td width="150px" style= "word-break:break-all">
									<img src="../images/piggy-bank.png" height="20" width="20"/>
									<%=_event[i].expense%>
								</td>
								<%if (_event[i].holder != undefined){%>
									<td width="150px" style= "word-break:break-all"><a href="" data-toggle="modal" data-target="#sponsorInfo<%= i %>"><%=_event[i].holder.name%></a></td>
									<!-- Modal -->
									<div class="modal fade" id="sponsorInfo<%= i %>" tabindex="-1" role="dialog" aria-labelledby="infoLabel" aria-hidden="true">
										<div class="modal-dialog" role="document">
											<div class="modal-content">
												<div class="modal-header">
													<h3 class="modal-title" id="infoLabel">承辦單位聯絡資訊</h3>
													<button type="button" class="close" data-dismiss="modal" aria-label="Close">
														<span aria-hidden="true">&times;</span>
													</button>
												</div>
												<div class="modal-body">
														<h3 class="inline">承辦單位名稱：</h3><p class="inline"><%=_event[i].holder.name%></p>
														<br>
														<h3 class="inline">承辦單位聯絡電話：</h3><p class="inline"><%=_event[i].holder.phone%><%=_event[i].holder.phone%></p>
														<br>
														<h3 class="inline">承辦單位e-mail：</h3><p class="inline"><a href="<%=_event[i].holder.email%>"><%=_event[i].holder.email%></a></p>
														<br>
												</div>
												<div class="modal-footer">
													<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
												</div>
											</div>
										</div>
									</div>
								<%}else{%>
									<td></td>
								<%}%>
								
								<%if(_event[i].ncculink != undefined) {%>
									<td width="100px" style= "word-break:break-all"><a href="<%=_event[i].ncculink%>" style="font-weight: bold">我要報名</a></td>
								<%}else{%>
									<td>無</td>
								<%}%>

							</tr>
							<%}%>
							</tbody>

							<!--表格換頁
							<tfoot>
								<a href="#">更多活動</a>
							</tfoot> -->

						</table>
					</div>
					<header class="align-center">
						<p>再來舉辦一場活動吧！</p>
					</header>

					<!--button-->
					<ul class="actions fit">
						<li><a href="addevent.html" class="button fit">新增活動</a></li>
					</ul>
					</div>
			</section>
<%-include('../root/footer')-%>